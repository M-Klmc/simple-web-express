<%- include('includes/header.ejs') %>
        <form method="get" style="text-align: right;">
        <input name="search" value="<%= searchQuery %>" style="display: inline; width: 200px;">
        <input type="submit" value="search" style="display: inline;">
        </form>
        <h1>TO-DO</h1>
        <% for (let t of todos) { %>
        <article class="card">
                <header>
                        <% if(t.done) { %>
                        <h2><del><a href="/<%= t._id %>/"><%= t.title %></a></del></h2>
                        <% } else { %>
                        <h2><a href="/<%= t._id %>/"><%= t.title %></a></h2>
                        <% } %>
                </header>
                <footer>
                        <% if (t.desc) { %></p>
                        <p><%= t.desc %></p>
                        <% } %>
                        <p><%= (new Date(t.createdAt)).toLocaleString() %></p>
                        <div style="text-align: right;">
                                <% if(!t.done) { %>
                                <form action="/<%= t._id %>?_method=PUT" method="POST" style="display: inline;">
                                        <input type="submit" class="succsess" value="Done!">
                                </form>
                                <% } %>
                                <form action="/<%= t._id %>?_method=DELETE" method="POST" style="display: inline;">
                                        <input type="submit" class="warning" value="Delete">
                                </form>
                        </div>
                </footer>
        </article>
        <% } %>
<%- include('includes/footer.ejs') %>