<%- include('includes/header.ejs') %>
        <% if (todo.done) { %>
        <p>Выполнено.</p>
        <% } %>
        <h1><%= todo.title %></h1>
        <% if (todo.desc) { %>
        <p><%= todo.desc %></p>
        <% } %>
        <p class="datetime">Создано: 
                <%= (new Date(todo.createdAt)).toLocaleString() %></p>
        <p class="addendum">
                <img src="/storage/uploaded/<%= todo.addendum %>">
        </p>
        <% } %>
<%- include('includes/footer.ejs') %>
